{
  "name": "group-messaging-backend",
  "version": "1.0.0",
  "description": "Secure group messaging platform backend with authentication",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/"
  },
  "author": "Group Messaging Platform Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-rate-limit": "^6.11.2",
    "helmet": "^6.1.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.15",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "globalSetup": "./tests/setup/global-setup.js",
    "globalTeardown": "./tests/setup/global-teardown.js",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testTimeout": 30000,
    "maxWorkers": 1,
    "forceExit": true,
    "verbose": false
  }
}
